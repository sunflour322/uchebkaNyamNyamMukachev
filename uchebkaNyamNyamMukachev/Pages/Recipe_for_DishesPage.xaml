<Page x:Class="uchebkaNyamNyamMukachev.Pages.Recipe_for_DishesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebkaNyamNyamMukachev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Recipe_for_DishesPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontWeight="Bold" Margin="10 0 0 0" x:Name="NameDishTb" Grid.ColumnSpan="4" FontSize="24"></TextBlock>
        <TextBlock Margin="10 0 0 0" Grid.Row="1"  x:Name="CategoryTb" Grid.ColumnSpan="2" FontSize="12" VerticalAlignment="Top"></TextBlock>
        <TextBlock Margin="10 0 0 0" Grid.Row="1"  x:Name="CookTimeTb" Grid.ColumnSpan="2" FontSize="12" VerticalAlignment="Center"></TextBlock>
        <TextBlock Margin="10 0 0 0" Grid.Row="1"  x:Name="DescTb" Grid.ColumnSpan="8" TextWrapping="Wrap" FontSize="12" VerticalAlignment="Bottom"></TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2">
            <TextBlock FontSize="12" Margin="0 0 5 0" >Servings:</TextBlock>
            <Button Content="-" Width="20" Height="20" VerticalAlignment="Top" Click="Button_Click_Minus" ></Button>
            <TextBox x:Name="CountTb" Width="40" Height="20" Margin="5 0 5 0" VerticalAlignment="Top" IsReadOnly="True"></TextBox>
            <Button Content="+" Width="20" Height="20" VerticalAlignment="Top" Click="Button_Click_Plus"></Button>
        </StackPanel>
        <TextBlock x:Name="CostTb" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" VerticalAlignment="Center"></TextBlock>

        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.RowSpan="4" Grid.ColumnSpan="4">
            <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 10">Ingredients:</TextBlock>
            <DataGrid Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn></DataGridTextColumn>
                    <DataGridTextColumn Width="100" Header="Name"></DataGridTextColumn>
                    <DataGridTextColumn Width="70" Header="Quantity"></DataGridTextColumn>
                    <DataGridTextColumn Width="70" Header="Unit"></DataGridTextColumn>
                    <DataGridTextColumn Width="70" Header="Cost"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.RowSpan="4" Grid.Column="4" Grid.ColumnSpan="4">
            <TextBlock FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 10">Cooking Process:</TextBlock>
            <TextBox Margin="5 0 5 0" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" Height="200"></TextBox>
        </StackPanel>
    </Grid>
</Page>
